<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yongquan.couponapp.ListCoupon.ListCouponActivity">
    <include layout="@layout/toolbar"/>
    <android.support.v7.widget.Toolbar
        android:title="@string/title_toolbar_coupon"
        android:titleTextColor="@color/white"
        android:background="@color/edt_focused"
        android:id="@+id/toolbar_coupon"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/toolbar_coupon"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/rv_coupon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
